@model AarhusWebDevCoop.ViewModels.ContactForm
@{
    Layout = null;
}
@if (TempData["success"] == null)
{
    using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface"))
    {
    <div class="col-lg-6">
        <div class="form-group label-floating is-empty">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group label-floating">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group label-floating">
            @Html.LabelFor(m => m.Subject, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Subject)
        </div>
        <div class="form-group label-floating">
            @Html.LabelFor(m => m.Message, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
        <div class="form-group">
            <div class="span6 pull-right">
                <button id="contact-submit" type="submit" class="btn btn-primary btn-raised">Send</button>
            </div>
        </div>
    </div>
    }


}
else
{
    <p>Thank you for contacting us. We’ll be in touch soon!</p>
}