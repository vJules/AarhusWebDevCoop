@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
    var root = CurrentPage.AncestorOrSelf(1);
}

<!DOCTYPE html>
<html>
<head>
    <title>@CurrentPage.Name - AarhusWebdevCoop</title>
    <meta name="description" content="@Umbraco.Field("metaDescription")">
    <meta name="keywords" content="@Umbraco.Field("metaKeywords")">
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet"/>*@
    @*<link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>*@
    <!-- Material Design fonts -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <!-- Bootstrap Material Design -->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-material-design.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/ripples.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container">

                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">@root.Name</a>
                </div>
                <div class="navbar-collapse collapse">
                    @Umbraco.RenderMacro("mainMenu")
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/material.min.js"></script>
    <script src="~/Scripts/ripples.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $.material.init()
    </script>
</body>
</html>
